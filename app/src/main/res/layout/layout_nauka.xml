<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txt_Ekran_Nauka_tytul"
        android:text="@string/text_flagi_i_stolice_swiata_nauka"
        android:textAlignment="center"
        android:textSize="@dimen/font_height_h2"
        android:textColor="@color/colorWhite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_15dp"
        android:layout_marginBottom="@dimen/padding_15dp"
        android:layout_alignParentTop="true"/>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/txt_Ekran_Nauka_tytul"
        android:background="@drawable/bg_ekran_wyboru_obszaru">


        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/listView"
            android:divider="#00000000"
            android:dividerHeight="6dp"
            android:layout_above="@+id/btnWsteczAlfLos"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            />

        <RelativeLayout
            android:id="@+id/btnWsteczAlfLos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_kontrastowy_xml"
            android:paddingBottom="@dimen/padding_button_h2"
            android:paddingTop="@dimen/padding_button_h2"
            android:gravity="center_horizontal"
            android:clickable="true"
            android:layout_marginBottom="6dp"
            android:onClick="f_btn_alfabetycznie_losowo"
            android:layout_above="@+id/btnWsteczEkranNauka">

            <TextView
                android:id="@+id/txt_btn_alfabetycznie_losowo"
                android:text="@string/text_losowo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_height_button"
                android:textColor="@color/colorWhite"
                />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/btnWsteczEkranNauka"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_wstecz_xml"
            android:paddingBottom="@dimen/padding_button_h2"
            android:paddingTop="@dimen/padding_button_h2"
            android:gravity="center_horizontal"
            android:clickable="true"
            android:onClick="f_btn_wstecz_nauka"
            android:layout_alignParentBottom="true">

            <TextView
                android:id="@+id/txt_btn_wstecz_nauka"
                android:text="@string/text_wstecz"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_height_button"
                android:textColor="@color/colorWhite"
                />

        </RelativeLayout>



    </RelativeLayout>


</RelativeLayout>