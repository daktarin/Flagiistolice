<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rl_twoje_wyniki_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/padding_lista_wyniki"
        android:paddingBottom="@dimen/padding_lista_wyniki">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1.0"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_twoje_wyniki_nr"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="1."
                android:textSize="@dimen/font_height_wyniki_naglowek"
                android:textColor="@color/colorWhite"
                android:layout_weight="0.2"
                android:gravity="left"
                android:paddingLeft="10dp"
                />

            <TextView
                android:id="@+id/tv_twoje_wyniki_obszar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="AMERYKA POŁUDNIOWA"
                android:textSize="@dimen/font_height_wyniki_naglowek"
                android:textColor="@color/colorWhite"
                android:layout_weight="0.5"
                android:gravity="left"
                />

            <TextView
                android:id="@+id/tv_twoje_wyniki_poprawne"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="75%"
                android:textSize="@dimen/font_height_wyniki_naglowek"
                android:textColor="@color/colorWhite"
                android:layout_weight="0.3"
                android:gravity="center_horizontal"
                />


        </LinearLayout>


    </RelativeLayout>

</RelativeLayout>