<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/lay_mapa"
    android:clipChildren="true">




    <WebView
        android:id="@+id/web_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </WebView>



        <RelativeLayout
            android:id="@+id/rl_slide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_left_flaga_mapa"
            android:paddingBottom="100dp">

            <ImageView
                android:id="@+id/iv_widok_mapy_flaga"
                android:layout_height="wrap_content"
                android:layout_width="120dp"

                android:layout_alignParentTop="true"
                android:adjustViewBounds="true"/>

            <TextView
                android:id="@+id/tv_widok_mapy_nazwa_panstwa"
                android:layout_below="@+id/iv_widok_mapy_flaga"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/colorBlack"
                android:textSize="15dp"
                android:shadowColor="@color/kolorCienia"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="2.0" />

            <TextView
                android:id="@+id/tv_widok_mapy_nazwa_stolicy"
                android:layout_below="@+id/tv_widok_mapy_nazwa_panstwa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/colorBlack"
                android:textSize="15dp"
                android:shadowColor="@color/kolorCienia"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="2.0"/>

        </RelativeLayout>











</RelativeLayout>
