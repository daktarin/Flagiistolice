<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="@drawable/tlowidgetu"
    >


    <RelativeLayout
        android:id="@+id/rl1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <TextView
            android:id="@+id/appwidget_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:text="Polska "
            android:textColor="#000"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="10dp"
            android:textAlignment="center"/>


    </RelativeLayout>




    <ImageView
        android:id="@+id/appwidget_image_flag"
        android:layout_below="@+id/rl1"
        android:layout_above="@+id/ll1"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/abchazja"
        android:adjustViewBounds="true"
        android:paddingRight="30dp"
        android:paddingLeft="30dp"
        android:scaleType="fitCenter"
        android:layout_centerHorizontal="true"/>

    <LinearLayout
        android:id="@+id/ll1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="0dp">

        <RelativeLayout
            android:id="@+id/btn_prev"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.33"
            android:gravity="center"
            android:padding="10dp">

            <TextView
                android:id="@+id/txt_wstecz"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txt_wstecz"
                android:textSize="15dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/btn_rand"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.33"
            android:gravity="center"
            android:padding="10dp">
            <TextView
                android:id="@+id/txt_losowe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txt_losuj"
                android:layout_weight="0.33"
                android:textSize="15dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/btn_next"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.33"
            android:gravity="center"
            android:padding="10dp">
            <TextView
                android:id="@+id/txt_wsteczwidget"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txt_naprzod"
                android:layout_weight="0.33"
                android:textSize="15dp"/>
        </RelativeLayout>


    </LinearLayout>

</RelativeLayout>